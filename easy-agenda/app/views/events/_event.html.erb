<div class="card" id="<%= dom_id event %>">
  <div class="card-body">
    <p>
      <strong>Nome:</strong>
      <%= event.name %>
    </p>

    <p>
      <strong>Detalhes:</strong>
      <%= event.description %>
    </p>

    <p>
      <strong>Início:</strong>
      <%= l event.started_at %>
    </p>

    <p>
      <strong>Fim:</strong>
      <%#= l event.finished_at, format: :only_hour %>
      <%= l event.finished_at %>
    </p>

    <% if event.file.attached? %>
      <%= link_to "Baixar Anexo", event.file, class: "btn btn-secondary", target: :blank %>
    <% end %>
  </div>
  <div class="card-footer d-flex justify-content-between">
    <%= link_to "Editar", edit_event_path(event), class: "btn btn-secondary" %>
    <%= button_to "Remover", event_path(event), method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Você tem certeza?" } %>
  </div>
</div>