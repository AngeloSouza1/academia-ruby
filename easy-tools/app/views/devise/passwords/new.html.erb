<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow rounded">
        <div class="card-body">
          <h2 class="text-center mb-4">Esqueceu sua senha?</h2>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
            <%= f.error_notification %>

            <div class="mb-3">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: 'form-control', placeholder: 'Email' } %>
            </div>

            <div class="text-center">
              <%= f.button :submit, "Envie-me instruções de redefinição de senha", class: "btn btn-primary btn-lg btn-block" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
