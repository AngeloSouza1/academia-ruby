<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card shadow rounded">
        <div class="card-body">
          <h2 class="text-center mb-4">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
            <div class="mb-3">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: 'form-control', placeholder: 'Email' } %>
            </div>
            <div class="mb-3">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: 'form-control', placeholder: 'Senha' } %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.button :submit, "Login", class: "btn btn-primary btn-lg btn-rounded" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= link_to "Inscrever-se", new_registration_path(resource_name) %><br>
            <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
