<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Formulário de Pedidos</title>

  <!-- Stylesheets -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/trix/1.3.1/trix.css">

  <style>
      body {
          font-family: 'Roboto', sans-serif;
          background-color: #f8f9fa;
          margin-bottom: 0;
      }

      .header-custom {
          background: linear-gradient(135deg, rgba(2, 89, 173, 0.93), #002060);
          color: #fff;
          padding: 1rem 0;
          text-align: left;
          margin-bottom: 15px;
      }

      .header-custom h1 {
          font-size: 1.5rem;
          margin-bottom: 0;
      }

      .card-custom {
          border: 1px solid #c0c0c0;
          background: linear-gradient(135deg, rgba(2, 89, 173, 0.93), #002060);
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
          transition: border-color 0.3s, box-shadow 0.3s;
          max-width: 600px;
          margin: 0 auto;
          margin-top: 11px;
          margin-bottom: 20px;
      }

      .card-custom:hover {
          border-color: #808080;
          box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
      }

      .card-body {
          padding: 2rem;
      }

      .form-label {
          font-weight: bold;
          color: white;
      }

      .form-section {
          background: linear-gradient(135deg, rgba(2, 89, 173, 0.93), #002060);
          color: #fff;
          padding: 1rem;
          margin-bottom: 1rem;
          border-radius: 0.5rem;
      }

      .btn-primary {
          background: linear-gradient(135deg, #004080, #002060);
          border: none;
          border-radius: 0.25rem;
          transition: background-color 0.3s;
      }

      .btn-primary:hover {
          background: linear-gradient(135deg, #002060, #001040);
      }

      .btn-secondary {
          background-color: #6c757d;
          border: none;
          border-radius: 0.25rem;
          transition: background-color 0.3s;
      }

      .btn-secondary:hover {
          background-color: #5a6268;
      }

      .footer {
          padding: 20px 0;
          background-color: #002060;
          color: #fff;
          text-align: center;
          margin-top: 20px;
      }

      .trix-button {
          color: white !important;
          background: linear-gradient(135deg, #87CEFA, #4682B4) !important;
          border-color: #87CEFA !important;
      }
  </style>
</head>

<body>
<header class="header-custom">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
      <img src="<%= asset_path('img1.png') %>" alt="Logo" style="height: 50px; border: 2px solid transparent; border-radius: 10px; box-shadow: 0 0 0 rgba(255, 255, 255, 0); transition: border 0.8s ease, box-shadow 0.8s ease;" class="me-3">
      <h5 class="fw-bold">Pedidos</h5>
    </div>
  </div>
</header>

<!-- Formulário -->
<div class="card card-custom">
  <%= simple_form_for @order do |form| %>
    <div class="card-body">
      <div class="form-section">
        <h2 class="mb-3">Consulta Pedidos</h2>

        <%= form.input :customer_id, label: "Cliente", required: true do %>
          <div data-controller="autocomplete" data-autocomplete-url-value="<%= search_customers_path %>" role="combobox">
            <input type="text" class="form-control" data-autocomplete-target="input" value="<%= form.object.customer&.name %>" />
            <%= form.input_field :customer_id, as: :hidden, data: { autocomplete_target: "hidden" } %>
            <ul class="list-group" data-autocomplete-target="results"></ul>
          </div>
        <% end %>

        <div class="row" data-controller="order-equipament" data-order-equipament-url-value="<%= search_equipaments_path %>">
          <div class="col-12 col-md-6">
            <%= form.input :period_start, html5: true, label: "Data Inicial", input_html: { data: { order_equipament_target: "periodStart" } } %>
          </div>

          <div class="col-12 col-md-6">
            <%= form.input :period_end, html5: true, label: "Data Final", input_html: { data: { order_equipament_target: "periodEnd" } } %>
          </div>

          <div class="col-12">
            <%= form.input :equipament_id, label: "Equipamento", required: true do %>
              <div role="combobox">
                <input type="text" class="form-control" data-order-equipament-target="input" value="<%= form.object.customer&.name %>" />
                <%= form.input_field :equipament_id, as: :hidden, data: { order_equipament_target: "hidden" } %>
                <ul class="list-group" data-order-equipament-target="results"></ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- footer -->
      <div class="card-footer d-grid gap-2 d-md-flex justify-content-md-end bg-light p-3">
        <div class="row">
          <div class="col-12 col-md-6 mb-2 mb-md-0">
            <%= link_to "Voltar", customers_path, class: "btn btn-secondary w-100" %>
          </div>
          <div class="col-12 col-md-6">
            <%= form.button :submit, 'Salvar', class: 'btn btn-primary w-100' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/trix/1.3.1/trix.js"></script>
</body>

</html>
